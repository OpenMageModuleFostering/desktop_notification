<?xml version="1.0"?>
<config>
    <modules>
        <Biztech_Desktopnotification>
            <version>0.1.3</version>
        </Biztech_Desktopnotification>
    </modules>
    <frontend>
        <routers>
            <desktopnotification>
                <use>standard</use>
                <args>
                    <module>Biztech_Desktopnotification</module>
                    <frontName>desktopnotification</frontName>
                </args>
            </desktopnotification>
        </routers>
        <layout>
            <updates>
                <desktopnotification>
                    <file>desktopnotification.xml</file>
                </desktopnotification>
            </updates>
        </layout>
    </frontend>
    
    <admin>
        <routers>
            <adminhtml>
                    <args>
                    <modules>
                        <desktopnotification after="Mage_Adminhtml">Biztech_Desktopnotification_Adminhtml</desktopnotification>
                        </modules>
                    </args>
                </adminhtml>    
        </routers>
    </admin>

    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Biztech_Desktopnotification>
                            <title>Desktopnotification Module</title>
                            <sort_order>10</sort_order>
                        </Biztech_Desktopnotification>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <desktopnotification>
                                            <title>Set Notification Message</title>
                                        </desktopnotification>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <desktopnotification>
                    <file>desktopnotification.xml</file>
                </desktopnotification>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <desktopnotification>
                <class>Biztech_Desktopnotification_Model</class>
                <resourceModel>desktopnotification_mysql4</resourceModel>
            </desktopnotification>
            <desktopnotification_mysql4>
                <class>Biztech_Desktopnotification_Model_Mysql4</class>
                <entities>
                    <desktopnotification>
                        <table>desktopnotification</table>
                    </desktopnotification>
                </entities>
            </desktopnotification_mysql4>
        </models>
        <resources>
            <desktopnotification_setup>
                <setup>
                    <module>Biztech_Desktopnotification</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </desktopnotification_setup>
            <desktopnotification_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </desktopnotification_write>
            <desktopnotification_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </desktopnotification_read>
        </resources>
        <blocks>
            <desktopnotification>
                <class>Biztech_Desktopnotification_Block</class>
            </desktopnotification>
            <adminhtml>
                <rewrite>
                    <page_footer>Biztech_Desktopnotification_Block_Adminhtml_Page_Footer</page_footer>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <desktopnotification>
                <class>Biztech_Desktopnotification_Helper</class>
            </desktopnotification>
        </helpers>
        <events>
            <sales_order_place_after>
                <observers>
                    <orderNotifyEvent>
                        <class>desktopnotification/observer</class>
                        <method>desktopnotification</method>
                    </orderNotifyEvent>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
</config>